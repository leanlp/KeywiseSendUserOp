{
  "compilerOptions": {
    "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true
  },
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "./node_modules"
  ]
}
